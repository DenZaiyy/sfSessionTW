{% extends 'base.html.twig' %}
{% block title %}Ajouter un programme
{% endblock %}
{% block body %}
	{% if edit %}
		<h1 class="text-2xl font-bold uppercase text-center">Editer un programme</h1>
	{% else %}
		<h1 class="text-2xl font-bold uppercase text-center">Ajouter un programme</h1>
	{% endif %}

	{# form_start permet de g√©rer manuellement la disposition du formulaire #}
	{{ form_start(formAddCategory, {'attr': {'class': 'w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md mt-5'}}) }}
	{{ form_row(formAddCategory.label, {'label': 'Nom de categorie : '}) }}
	{{ form_row(formAddCategory.submit, {'label': 'Ajouter'}) }}
	{{ form_end(formAddCategory) }}
{% endblock %}
