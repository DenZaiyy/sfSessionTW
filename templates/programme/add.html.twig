{% extends 'base.html.twig' %}
{% block title %}Ajouter un programme
{% endblock %}
{% block body %}
	{% if edit %}
		<h1 class="text-2xl font-bold uppercase text-center">Editer un programme</h1>
	{% else %}
		<h1 class="text-2xl font-bold uppercase text-center">Ajouter un programme</h1>
	{% endif %}

	{# form_start permet de g√©rer manuellement la disposition du formulaire #}
	{{ form_start(formAddProgramme, {'attr': {'class': 'w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md mt-5'}}) }}
	{{ form_row(formAddProgramme.session, {'label': 'Nom de session : '}) }}
	<div class="mt-5">
		{{ form_row(formAddProgramme.module, {'label': 'Module : '}) }}
	</div>
	<div class="mt-5">
		{{ form_row(formAddProgramme.duree, {'label': 'Duree (h) : '}) }}
	</div>
	{{ form_row(formAddProgramme.submit, {'label': 'Ajouter'}) }}
	{{ form_end(formAddProgramme) }}
{% endblock %}
