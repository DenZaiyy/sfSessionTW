{% extends 'base.html.twig' %}
{% block title %}Ajouter un module
{% endblock %}
{% block body %}
	{% if edit %}
		<h1 class="text-2xl font-bold uppercase text-center">Editer un module</h1>
	{% else %}
		<h1 class="text-2xl font-bold uppercase text-center">Ajouter un module</h1>
	{% endif %}

	{# form_start permet de gérer manuellement la disposition du formulaire #}
	{{ form_start(formAddModule, {'attr': {'class': 'w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md mt-5'}}) }}
	{{ form_row(formAddModule.label, {'label': 'Nom du module : '}) }}
	<div class="mt-5">
		{{ form_row(formAddModule.categorie, {'label': 'Catégorie : '}) }}
	</div>
	{{ form_row(formAddModule.submit, {'label': 'Ajouter'}) }}
	{{ form_end(formAddModule) }}
{% endblock %}
