{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	{{ form_start(registrationForm, {'attr': {'class': 'w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md mt-5'}}) }}
		<h1 class="text-2xl font-bold uppercase text-center">Register</h1>

		<div class="mt-2">
			{{ form_row(registrationForm.username) }}
		</div>

		<div class="mt-2">
			{{ form_row(registrationForm.email) }}
		</div>

		<div class="mt-2">
			{{ form_row(registrationForm.plainPassword,
				{
					label: 'Password'
				})
			}}
		</div>

		<div class="mt-2">
			{{ form_row(registrationForm.image) }}
		</div>

		<div class="mt-2 text-center">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>

		<div class="mt-5">
			<button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md ease-in-out duration-500 uppercase text-center">Register</button>
		</div>

	{{ form_end(registrationForm) }}
{% endblock %}
